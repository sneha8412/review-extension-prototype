{
  "name": "Edge Website Reviews",
  "description": "Edge extension prototype for Edge browser reviews!",
  "version": "1.0",
  "author" : "Sneha Agarwal",
  "manifest_version": 3,
  "permissions": ["activeTab", "tabs"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/assets/js/review.js"]
    }],
  "icons": {
    "48": "/assets/icons/Snowman48.png",
    "128": "/assets/icons/pika-128.png"
  },
  "action" : {
    "default_popup" : "review.html"
  }

}
